{{!-- Loop overing each of the total posts in the posts array --}}
<section class="d-flex flex-row justify-content-center">
    <div class="col-3 h-25">
        <button type="button" id="add-btn" class="btn btn-primary btn-lg h-25">Add a Post!</button>
    </div>

    <div class="col-12">
        {{#if logged_in}}
        {{#each posts as |post|}}
        <div class="mb-4">
            <div class="posts d-flex flex-row justify-content-between border border-dark rounded-top">
                <a href="/post/{{id}}"><h3 class="post-title p-2">{{post_title}}</h3></a>
                <p class="post-user pt-3 pr-2" style="text-size: 10px; font-weight: bold;">Posted by {{username}} on
                    {{created_at}} </p>
            </div>
            <div class="post-text border border-dark rounded-bottom p-2">{{post_text}}</div>
        </div>
        {{/each}}
        {{else}}
        <h5 class="text-center">Please sign in to view your Dashboard!</h5>
        {{/if}}
    </div>
</section>

{{!-- Hidden Popup for Creating a new Post --}}
<section id="create-post-form" class="d-none bg-light w-50 rounded"
    style="position:fixed; top: 25%; left: 25%; transition:cubic-bezier(1, 0, 0, 1);">
    <div id="popup-container" class="d-flex flex-column mx-auto rounded">
        <button class="closebtn btn btn-sm btn-danger m-2"
            style="height: 30px; width: 30px;  position: absolute; right: 10px;">X</button>
        <h1 class="text-center text-dark ml-5">Make a Post!</h1>
        <div class="form-group mx-2">
            <label for="exampleFormControlInput1">Title:</label>
            <input id="posttitle" type="text" class="form-control mb-2" id="exampleFormControlInput1"
                placeholder="Comment Here!">
            <label for="exampleFormControlInput1">Post:</label>
            <input id="posttext" type="text" class="form-control" id="exampleFormControlInput1"
                placeholder="Comment Here!">
        </div>
        <button id="submitbtn" type="button" class="btn btn-primary mx-auto w-25 mb-2">Submit!</button>
    </div>
</section>




<script src="/js/dashboard.js"></script>